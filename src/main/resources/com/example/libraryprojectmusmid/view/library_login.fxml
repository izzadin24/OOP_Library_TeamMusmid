<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400" prefWidth="600" style="-fx-background-color: linear-gradient(to bottom right, #a3c1ff, #6b91e3);" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.example.libraryprojectmusmid.controller.LoginController">

    <VBox alignment="CENTER" layoutX="150.0" layoutY="100.0" prefHeight="233.0" prefWidth="308.0" spacing="20.0">
        <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;" text="myUMM Library" />

        <TextField fx:id="nimField" promptText="Masukkan NIM" style="-fx-background-radius: 20; -fx-padding: 10;" />
        <PasswordField fx:id="passwordField" promptText="Masukkan Password atau PIC" style="-fx-background-radius: 20; -fx-padding: 10;" />

        <Button onAction="#handleLogin" style="-fx-background-radius: 20; -fx-padding: 10 20; -fx-font-weight: bold;" text="LOGIN" />

        <Hyperlink onAction="#handleAdminLogin" text="Admin Login" />
    </VBox>

    <Label layoutX="20.0" layoutY="350.0" style="-fx-text-fill: white;" text="Butuh Bantuan? hubungi kami via WhatsApp" />
    <Label layoutX="20.0" layoutY="370.0" style="-fx-text-fill: white; -fx-font-weight: bold;" text="+62 821 4377 7735" />
</AnchorPane>
